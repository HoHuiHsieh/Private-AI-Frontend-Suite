# ============================================================================
# Authentication Configuration
# ============================================================================
OAUTH2_ENABLE=true
OAUTH2_SECRET_KEY=<YOUR_SECRET_KEY>
OAUTH2_ALGORITHM=HS256
OAUTH2_ACCESS_TOKEN_EXPIRE_TIME=3600
OAUTH2_REFRESH_TOKEN_EXPIRE_TIME=2592000

# Default Admin User
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=<YOUR_EMAIL>
DEFAULT_ADMIN_FULL_NAME=<YOUR_FULL_NAME>
DEFAULT_ADMIN_DISABLED=false
DEFAULT_ADMIN_PASSWORD=<YOUR_PASSWORD>

# ============================================================================
# PostgreSQL Database Configuration
# ============================================================================
DATABASE_HOST=<YOUR_DB_HOST>
DATABASE_PORT=5432
DATABASE_USERNAME=<YOUR_DB_USERNAME>
DATABASE_PASSWORD=<YOUR_DB_PASSWORD>

# ============================================================================
# Logging Configuration
# ============================================================================
LOGGING_LEVEL=WARNING
LOGGING_DATABASE_ENABLED=true
LOGGING_DATABASE_RETENTION_DAYS=365
LOGGING_CONSOLE_ENABLED=true
LOGGING_CONSOLE_FORMAT='%(asctime)s - %(name)s - %(levelname)s - %(message)s'
